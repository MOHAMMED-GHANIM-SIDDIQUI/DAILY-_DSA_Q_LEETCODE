class Solution {
public:
    int countPartitions(vector<int>& nums) {
          int sum=accumulate(nums.begin(),nums.end(),0);
          int left_sum=0;
          int n=nums.size();
          int ans=0;
          for(int i=0;i<n-1;i++)
          {
            left_sum+=nums[i];
            int right_sum=sum-left_sum;
            if( (left_sum- right_sum) % 2 ==0)
                ans+=1;
          }
          return ans;
    }
};
